#include<iostream>
using namespace std;
#include<string.h>

// funtions of String

int main()
{
   char str1[10]= "hello";
   char str2[10]= "world";
   char str3[20];
   int length;
   
   strcpy(str3,str2);
   cout<<"copy of String 2 in string 3 :: "<<str3<<endl;
   
   strcat(str1,str2);
   cout<<"string1 after concatenates::"<<str1<<endl;
   
   length=strlen(str2) ;
   cout<<"length of 2nd string ::"<<length<<endl;
   
   int compare=strcmp(str1,str2);
   cout<<"compare of both string::"<<compare<<endl;
   return 0;
}
